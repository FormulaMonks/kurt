{
  "include": ["src/*.ts"],
  "references": [{ "path": "../kurt" }],
  "compilerOptions": {
    "composite": true,
    "paths": { "@formula-monks/kurt": ["../kurt/src"] },
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,
    "lib": ["esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2015",
    "esModuleInterop": true
  }
}
